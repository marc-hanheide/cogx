        <thickness_max>0.002</thickness_max>
        <angle_min>1.570796326795</angle_min>
        <angle_max>1.570796326795</angle_max>
        <pose>
          <v1>0.0</v1>
          <v2>0.25</v2>
          <v3>0.0</v3>
          <roll>0.0</roll>
          <pitch>0.0</pitch>
          <yaw>3.14159265359</yaw>
        </pose>
      </object>
    </trial>
  </experiment>

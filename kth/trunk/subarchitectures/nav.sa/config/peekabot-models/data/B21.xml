<scene>

  <color r="1" g="0" b="0"> 

    <cylinder> 

      <name>model</name>

      <scale>0.26 0.26 0.38</scale>
      <transform>
        <translate>0 0 0.19</translate>
      </transform>

      <children>

        <cylinder>
          <scale>0.26 0.26 0.38</scale>
          <transform>
            <translate>0 0 0.42</translate>
          </transform>
        </cylinder>
        
        <sensor type="rangefinder">
          <name>rangefinder</name>
	  
          <transform>
            <translate>0.14 0 0.21</translate>
          </transform>
          
          <params>
            <int name="samples">361</int>
            <float name="start_angle"> -90 </float>
            <float name="end_angle"> 90 </float>
	    <float name="angle_uncertainty">0.25</float>
            <float name="dist_uncertainty_prop">0.002</float>
            <float name="dist_uncertainty_const">0.01</float>
            <float name="lower_bound">0.1</float>
	    <float name="upper_bound">8</float>        
	    <string name="mode">dots</string>
          </params>
          
          <children>
	    <model><file>sick_lms200/sick_lms200.pbmf</file></model>
          </children>
        </sensor>
        
        <!--********************************************
	    ********** PTU + Stereo camera  ************
	    ********************************************-->
        
        <group>
          <name>camera</name>
          
          <transform>
	    <translate>0.15 0 0.65</translate>
          </transform>
          
          <children>
            <model>
              <file>flea2.pbmf</file>
              <name>cam_right</name>
              <transform>
                <translate>0 0 0</translate>
              </transform>
            </model>          
          </children>
        </group>
        
        
      </children>
    </cylinder>
  </color>
  
</scene>

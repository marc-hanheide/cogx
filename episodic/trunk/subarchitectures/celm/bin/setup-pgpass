#!/bin/sh

PGPFILE=~/.pgpass

if [ -e $PGPFILE ]; then
	grep ":elm:" $PGPFILE > /dev/null && \
	echo "I already found an elm entry in $PGPFILE. I will leave it unchanged." && \
	exit 1
fi;

echo -n "Adding elm to the pgpass file...   " && \
echo "*:*:elm:elm:somepw" >> $PGPFILE && \
echo "done." && \
echo -n "Setting file permissions...        " && \
chmod 600 $PGPFILE && \
echo "done."


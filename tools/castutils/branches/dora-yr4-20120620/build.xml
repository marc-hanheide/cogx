<!-- Inner build file for a module in the CogX system -->
<project name="myproject" default="compile" basedir=".">
	<property name="projectroot.dir" value="${basedir}/../.." />
	<property file="${projectroot.dir}/build.properties" />

	<path id="build.classpath">
        <fileset dir="${jar.dir}" includes="*.jar" erroronmissingdir="false"/>
		<pathelement path="${ice.jar}" />
		<pathelement path="${cast.jar}" />
		<pathelement path="${log4j.jar}" />
		<pathelement path="${projectroot.dir}/subarchitectures/binder/src/java" />
		<pathelement path="${projectroot.dir}/tools/beliefs/src/java" />
	</path>

	<!-- Controls what is compiled -->
	<property name="src.dir" value="./src/java" />
	<property name="slice.dir" value="./src/slice" />

	<!-- Includes the slice2java task from Ice. Requires ant-ice.jar to be in your classpath -->
	<taskdef name="slice2java" classname="Slice2JavaTask">
	</taskdef>

	<!-- =================================================================== -->
	<!-- Preparation                                                         -->
	<!-- =================================================================== -->
	<target name="prepare" description="any project-specific init">
		<mkdir dir="${output.dir}" />
		<tstamp/>
	</target>

	<!-- =================================================================== -->
	<!-- Source generation                                                   -->
	<!-- =================================================================== -->
	<target name="slice" depends="prepare" description="generates source from slice">
		<slice2java tie="true" outputdir="${src.dir}" stream="yes">
			<fileset dir="${slice.dir}" includes="castutils.ice" />
			<includepath>
				<pathelement path="${slice.dir}" />
				<pathelement path="${castslice.dir}" />
			</includepath>
		</slice2java>
	</target>


	<!-- =================================================================== -->
	<!-- Expand libraries                                                    -->
	<!-- =================================================================== -->

	<target name="expandlibs" depends="prepare">
		<echo message="Expanding external libraries for castutils to output/classes" />
		<copy todir="${jar.dir}" file="./lib/jfreechart-1.0.13.jar" />
		<copy todir="${jar.dir}" file="./lib/jcommon-1.0.16.jar" />
		<copy todir="${jar.dir}" file="./lib/xpp3_min-1.1.4c.jar" />
		<copy todir="${jar.dir}" file="./lib/xstream-1.3.1.jar" />
		<copy todir="${jar.dir}" file="./lib/xom-1.1.jar" />
		<copy todir="${jar.dir}" file="./lib/snakeyaml-1.9.jar" />
	</target>


	<!-- =================================================================== -->
	<!-- slice file compilation                                              -->
	<!-- =================================================================== -->
	<target name="compile-slice" depends="slice" description="compiles autogenerated classes">
		<javac srcdir="${src.dir}/castutils/slice" destdir="${output.dir}" debug="${debug}" deprecation="${deprecation}" optimize="${optimize}" debuglevel="lines,vars,source">
			<classpath refid="build.classpath" />
		</javac>
	</target>


	<!-- =================================================================== -->
	<!-- Basic compilation                                                   -->
	<!-- =================================================================== -->
	<target name="compile" depends="expandlibs,slice" description="compiles the source code">
		<javac srcdir="${src.dir}" destdir="${output.dir}" debug="${debug}" deprecation="${deprecation}" optimize="${optimize}" debuglevel="lines,vars,source">
			<classpath refid="build.classpath" />
		</javac>
	</target>

	<!-- =================================================================== -->
	<!-- Cleanup                                                             -->
	<!-- =================================================================== -->
	<target name="clean">
		<delete file="${src.dir}/.depend" />
		<delete dir="${src.dir}/castutils/slice" />
	</target>


</project>

CPP MG PlanePopOut PlanePopOut --videoname videoserver --stereohost localhost --stereoname stereoserver  --displayserver "display.srv" --display #--log
CPP MG Filter SOIFilter --videoname videoserver --camid 0 --display --stereoname stereoserver --objht 23 --objdt 60 --bght 24 --bgdt 9999 --fixc 24 --log true 
#CPP MG vis.learner     VisualLearner --log # --debug
CPP MG vis.analyzer    ObjectAnalyzer  --log # --debug

JAVA MG vision.mediator eu.cogx.perceptmediator.george.VisualObjectMediatorComponent --debug

#JAVA MG percept.monitor castutils.viewer.V11WMViewerComponent --displayserver "display.srv" --subscribe "eu.cogx.beliefs.slice.PerceptBelief"
JAVA MG belief.monitor castutils.viewer.V11WMViewerComponent --displayserver "display.srv" --subscribe "eu.cogx.beliefs.slice.GroundedBelief"
JAVA MG goal.monitor castutils.viewer.V11WMViewerComponent --displayserver "display.srv" --subscribe "motivation.slice.Motive"
#JAVA MG visual.object.monitor castutils.viewer.V11WMViewerComponent --displayserver "display.srv" --subscribe "VisionData.VisualObject"
#JAVA MG proto.object.monitor castutils.viewer.V11WMViewerComponent --displayserver "display.srv" --subscribe "VisionData.ProtoObject"
JAVA MG soi.monitor castutils.viewer.V11WMViewerComponent --displayserver "display.srv" --subscribe "VisionData.SOI"

CPP MG video.viewer VideoViewer --videoname videoserver --camid 0 --displayserver "display.srv"
#CPP MG stereo.viewer StereoViewer --stereoname stereoserver --videoname videoserver --camid 0 #--displayserver "display.srv"

####################################################################################################################
SUBARCHITECTURE binder 
JAVA TM cast.architecture.AlwaysPositiveTaskManager #--log
JAVA WM cast.architecture.SubarchitectureWorkingMemory

####################################################################################################################
SUBARCHITECTURE planner.sa

JAVA WM cast.architecture.SubarchitectureWorkingMemory
CPP TM AlwaysPositiveTaskManager

JAVA MG pt-visual	eu.cogx.percepttracker.george.VisualObjectTracker --debug --write-to-sa binder

CPP MG Planner WMControl --log

JAVA MG goal.filter motivation.components.filters.MotiveFilterManager --filter "ManualSelectFilter,LimitTriesFilter" 
JAVA MG goal.scheduler motivation.components.managers.Scheduler --debug 

JAVA MG manual.planning eu.cogx.planner.facade.ManualPlanningTaskComponent

JAVA MG goal.generator.shape eu.cogx.goals.george.LearnShapeGenerator
JAVA MG goal.generator.color eu.cogx.goals.george.LearnColorGenerator


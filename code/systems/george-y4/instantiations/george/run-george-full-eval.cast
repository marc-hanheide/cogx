# vim: set ft=cast sw=4 sts=4 ts=8 et :vim

SETVAR hardware=simulation
# SETVAR hardware=real

IFEQ(%(hardware),real)
    OPTDEFAULT hardware_options=<multiline>
        kinect
        !kinect-video
        !video 
        !stereo
        ptz  cameramount
        robot
        !laser
        katana
    </multiline>
ELSE # simulation
    OPTDEFAULT hardware_options=<multiline>
        !kinect
        !kinect-video
        video 
        stereo
        ptz
        cameramount
        robot
        !laser
        !katana
    </multiline>
ENDIF

OPTDEFAULT feature_options=<multiline>
   vision
   vision-execution
   vision-mediators
   vision-monitors
   visual-learner
   !object-recognizer
   spatial
   binder
   binder-mln
   dialogue
   !dialogue-gui
   planning
   motivation
   manipulation
   visualization
</multiline>

OPTDEFAULT Motivation_George_Options=<multiline>
    model-status-generator
</multiline>

VARDEFAULT MotiveFileManagerGoalFilter=automatic
IFEQ(1, 0)
    SETVAR MotiveFileManagerGoalFilter=manual
ENDIF
IFEQ(1, 0)
    # fake katana
    SETOPT feature_options=manipulation
    SETOPT hardware_options=!katana
ENDIF

OPTDEFAULT test_options=<multiline>
    tutor-driven-test
</multiline>

IFOPTANY(%(test_options), tutor-driven-test)
    # The world used is george-02.world, it must be specified at Gazebo startup.
    # The object list is shared between GazeboJuggler and GeorgeTester.
    SETVAR JugglerObjectList=%(CONFIG_DIR)/../xdata/gazebo/test1.objects.txt
    SETVAR TesterLearnAttrs=%(CONFIG_DIR)/../xdata/gazebo/test1.attrs.txt

    # We choose the manual filter. (2012-05-30) it sets the following goal filters:
    # Tutor initiative: ON, Analyze PO: ON, everything else is off.
    # These settings are required for the tutor-driven test.
    SETVAR MotiveFileManagerGoalFilter=manual
ENDIF

INCLUDE george.cast

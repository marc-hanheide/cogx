<!-- Common variables used by the CoSy build system -->
<project name="java build parameters">

        <!-- Controls where the output of compilation goes -->
	<property name="output" value="./output" />

	<import file="./targets.xml" />

	<!-- Compilation parameters -->
	<property name="debug" value="true" />
	<property name="optimize" value="false" />
	<property name="deprecation" value="true" />


	<!-- Where the source should be for individual projects -->
	<property name="src.dir" value="./src/java" />
	<property name="slice.dir" value="./src/slice" />
	<property name="doc.dir" value="./doc" />

	<property name="fixed.mappings" value="-pkgPrefix FrameworkBasics balt.corba.autogen -pkgPrefix FrameworkData balt.corba.autogen -pkgPrefix RemoteConnectors balt.corba.autogen -pkgPrefix cdl cast.cdl -pkgPrefix guitypes cast.cdl"/>

</project>

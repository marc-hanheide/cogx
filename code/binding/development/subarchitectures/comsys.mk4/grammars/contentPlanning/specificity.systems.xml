<systems> 


<!-- /**

@system specificattion.entity

Just sets the quantification and number of an entity to singular. 

*/ --> 

<system id="quantification.entity" region="QUANTIFICATION" metafunction="ideational">
   <chooser id="default"/>
   <conditions>
      <condition features="@type:entity"/>
<!-- add condition: qunatity=1 -->
   </conditions>
   <actions>
      <action choice="default">
	 <add-feature feature="Quantification" value="specific"/>
	 <add-feature feature="Num" value="sg"/>
      </action>
   </actions>
</system>

<!-- /**

@system quantification.location

Just sets the quantification and number of a location to specific singular. 

*/ --> 

<system id="quantification.loation" region="QUANTIFICATION" metafunction="ideational">
   <chooser id="default"/>
   <conditions>
      <condition features="@type:e-location"/>
   </conditions>
   <actions>
      <action choice="default">
	 <add-feature feature="Quantification" value="specific"/>
	 <add-feature feature="Num" value="sg"/>
      </action>
   </actions>
</system>




</systems>

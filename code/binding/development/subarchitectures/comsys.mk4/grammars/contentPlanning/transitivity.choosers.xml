<choosers>

<!-- /** Chooser c-perception.insert decides whether to insert a perception-verb structure (e.g., "see") at the root node. 
If the CONTENT is of type entity then 
   if MODALITY=vision then 
      if SpeechAct=assertion then
	     decide to insert perception, indicative mode
		 else if SpeechAct=question then 
		    decide to insert perception, interrogative mode
   else decide not to insert perception
*/ -->

<chooser id="c-playing.insert" region="TRANSITIVITY" metafunction="ideational">
   <dectree>
       <choicenode answer="*TOP*">
         <inquiry id="q-rel-eq" type="string" answerset="@true @false"> 
			 <q-rel-eq nomvar="CONTENT" focus="type" val="entity" /> 
		 </inquiry>
		 <choicenode answer="true">   <!-- type:entity -->
			<inquiry id="q-ex-prop" type="string" answerset="@true @false"> 
				<q-ex-prop nomvar="CONTENT" val="game" /> 
			</inquiry>		  
			<choicenode answer="true">
				<result val="insert"/>			
			</choicenode>
			<choicenode answer="false">
				<result val="no-insert"/>			
			</choicenode>
		 </choicenode>
		 <choicenode answer="false">
			<return val="no-insert"/>
		 </choicenode>
		</choicenode>
	</dectree>
</chooser>

<chooser id="c-perception.insert" region="TRANSITIVITY" metafunction="ideational">
   <dectree>
       <choicenode answer="*TOP*">
         <inquiry id="q-rel-eq" type="string" answerset="@true @false"> 
	     <q-rel-eq nomvar="CONTENT" focus="type" val="entity" /> 
		 </inquiry>
		 	 <choicenode answer="true">   <!-- type:entity -->
				<!-- check for modaliti=vision could be left out, because already in system input cond -->	
                <inquiry id="q-ex-fv" type="string" answerset="@true @false @unknown"> 
	            <q-ex-fv nomvar="DVP" feat="Modality" val="vision" /> 
				</inquiry>
				   <choicenode answer="true"> <!-- modality:vision -->
					  <inquiry id="q-ex-fv" type="string" answerset="@true @false @unknown"> 
					  <q-ex-fv nomvar="DVP" feat="SpeechAct" val="assertion" /> 
					  </inquiry>
						<choicenode answer="true">  <!-- spechact:assertion -->
							<result val="insert-perception-ind"/>  
						</choicenode> 						
						<choicenode answer="false">  <!-- speechact not assertion  -->
							<inquiry id="q-ex-fv" type="string" answerset="@true @false @unknown"> 
							<q-ex-fv nomvar="DVP" feat="SpeechAct" val="question" /> 
							</inquiry>
								<choicenode answer="true">  <!-- speechact:question -->
									<result val="insert-perception-int"/>  
								</choicenode> 
								<choicenode answer="false">  <!-- speechact not question -->
									<result val="not-insert-perception"/> 
								</choicenode>
								<choicenode answer="unknown">  <!-- speechact unknown (unnecessary branch)-->
									<result val="not-insert-perception"/> 
								</choicenode>
						</choicenode>  <!-- end not assertion -->
						<choicenode answer="unknown">  <!-- speechact unknown -->
							<result val="not-insert-perception"/> 
						</choicenode>				   						
				   </choicenode>	<!-- end vision --> 			   
				   <choicenode answer="false">  <!-- modality not vision -->
					  <result val="not-insert-perception"/> 
				   </choicenode>
				   <choicenode answer="unknown">  <!-- modality unknown --> 
					  <result val="not-insert-perception"/> 
				   </choicenode>
  	         </choicenode>  <!-- end type entity -->
	         <choicenode answer="false">  <!-- type not entity -->
	            <result val="not-insert-perception"/>
	         </choicenode>
	   </choicenode>  <!-- end TOP -->
   </dectree>
</chooser>



<chooser id="c-ascription.propertyreplace" region="TRANSITIVITY" metafunction="ideational">

   <dectree>
       <choicenode answer="*TOP*">
         <inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
	     <q-ex-rel val="Color"/>	                                 
	     </inquiry>
  	     <choicenode answer="true">
	       <result val="color-property-present"/>
	     </choicenode>
	     <choicenode answer="false">
			<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
				<q-ex-rel val="Size"/>	                                 
			</inquiry>
			<choicenode answer="true">
				<result val="size-property-present"/>
			</choicenode>
			<choicenode answer="false">
				<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
					<q-ex-rel val="Shape"/>	                                 
				</inquiry>
				<choicenode answer="true">
					<result val="shape-property-present"/>
				</choicenode>
				<choicenode answer="false">
					<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
						<q-ex-rel val="Owner"/>	                                 
					</inquiry>
					<choicenode answer="true">
						<result val="owner-property-present"/>
					</choicenode>
					<choicenode answer="false">
						<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
							<q-ex-rel val="TopIn"/>	                                 
						</inquiry>
						<choicenode answer="true">
							<result val="topin-property-present"/>
						</choicenode>
						<choicenode answer="false">
							<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
								<q-ex-rel val="TopOn"/>	                                 
							</inquiry>
							<choicenode answer="true">
								<result val="topon-property-present"/>
							</choicenode>
							<choicenode answer="false">
								<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
									<q-ex-rel val="TopAt"/>	                                 
								</inquiry>
								<choicenode answer="true">
									<result val="topat-property-present"/>
								</choicenode>
								<choicenode answer="false">
									<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
										<q-ex-rel val="NearTo"/>	                                 
									</inquiry>
									<choicenode answer="true">
										<result val="nearto-property-present"/>
									</choicenode>
									<choicenode answer="false">
										<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
											<q-ex-rel val="FarFrom"/>	                                 
										</inquiry>
										<choicenode answer="true">
											<result val="farfrom-property-present"/>
										</choicenode>
										<choicenode answer="false">
											<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
												<q-ex-rel val="NextTo"/>	                                 
											</inquiry>
											<choicenode answer="true">
												<result val="nextto-property-present"/>
											</choicenode>
											<choicenode answer="false">
												<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
													<q-ex-rel val="LeftOf"/>	                                 
												</inquiry>
												<choicenode answer="true">
													<result val="leftof-property-present"/>
												</choicenode>
													<choicenode answer="false">
														<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
															<q-ex-rel val="RightOf"/>	                                 
														</inquiry>
														<choicenode answer="true">
															<result val="rightof-property-present"/>
														</choicenode>
														<choicenode answer="false">
															<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
																<q-ex-rel val="Location"/>  <!-- general, unspecified, location -->	                                 
															</inquiry>
															<choicenode answer="true">
																<result val="location-property-present"/>
															</choicenode>
															<choicenode answer="false">														
																<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
																	<q-ex-rel val="Attitude"/>  <!-- something like "nice" -->	                                 
																</inquiry>
																<choicenode answer="true">
																	<result val="attitude-property-present"/>
																</choicenode>
																<choicenode answer="false">							
																	<inquiry id="q-ex-rel" type="string" answerset="@true @false"> 
																	<q-ex-rel val="Type"/>  <!-- something like "a kitchen" -->	                                 
																	</inquiry>
																	<choicenode answer="true">
																		<result val="type-property-present"/>
																	</choicenode>
																	<choicenode answer="false">																														<result val="unknown-property-present"/>
																	</choicenode>  <!-- end type property -->
																</choicenode>  <!-- end attitude property -->
															</choicenode>  <!-- end location property -->
														</choicenode>  <!-- end rightof property -->
												</choicenode>  <!-- end leftof property -->	
										</choicenode>  <!-- end nextto property -->												
									</choicenode>  <!-- end farfrom property -->							
								</choicenode>  <!-- end nearto property -->							
							</choicenode>  <!-- end topat property -->									
						</choicenode>  <!-- end topon property -->							
					</choicenode>  <!-- end topin property -->							
				</choicenode>  <!-- end owner property -->		
				</choicenode>  <!-- end shape property -->			
			</choicenode>  <!-- end size property -->
	     </choicenode>  <!-- end color property -->
	</choicenode>
   </dectree>
</chooser>

</choosers>

# HOST <hostname> -- default host to run all the components on, not
# required if specified elsewhere
HOST localhost


# SUBARCHITECTURE <subarch name> <default host to be used>
SUBARCHITECTURE stage.subarch 
CPP WM StageWorkingMemory  #--log #--debug-events
CPP TM AlwaysPositiveTaskManager #--log --debug
CPP DD straight.man StraightMan -s "what's brown and sticky" #--log --debug
CPP GD funny.man FunnyMan -p "a stick" --log --debug


# SUBARCHITECTURE <subarch name> <default host to be used>
SUBARCHITECTURE audience.subarch 
#JAVA WM comedyarch.subarchitectures.audience.AudienceWorkingMemory #--log
CPP WM AudienceWorkingMemory # --log
CPP TM AlwaysPositiveTaskManager  #--log #--debug
CPP GD audience.member AudienceMember --reaction "YAY!"


SUBARCHITECTURE director.subarch 
#in this case another wm is not necesasary
#it just needs the correct ontology 
CPP WM AudienceWorkingMemory  --log true #--debug false
CPP TM AlwaysPositiveTaskManager #--log
CPP GD ass.director AssistantDirector --log #--debug
CPP GD director Director --log --test #--debug 

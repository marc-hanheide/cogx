<?xml version="1.0" encoding="UTF-8"?>

<!-- For a complete description of what action steps are built-in, and
     what formats the definitions of systems should take, see the file
     "../ucpsystems.xsd".  
-->

<systems> 


<!-- /**

@system delimitation.entity
just sets the delimitation of entities to existential,
unless InfoStatus=familiar.

Need to exclude cases where the nominal is under <Compound> relation.

*/ --> 

<system id="delimitation.entity" region="DELIMITATION" metafunction="ideational">
   <chooser id="c-delimitation"/>
   <conditions>
      <condition features="@type:entity @feat:PRONOMINALIZED:false"/> 
      <condition features="@type:thing @feat:PRONOMINALIZED:false"/> 	  
      <condition features="@type:physical @feat:PRONOMINALIZED:false"/>  <!-- other than mass -->
   </conditions>
   <actions>
      <action choice="existential">
	 <add-feature feature="Delimitation" value="existential"/>
      </action>      
      <action choice="unique">
	 <add-feature feature="Delimitation" value="unique"/>
      </action>
      <action choice="variable">
	 <add-feature feature="Delimitation" value="variable"/>
      </action>      
      <action choice="no-delim">   
      </action>
   </actions>
</system>


<system id="delimitation.substance" region="DELIMITATION" metafunction="ideational">
   <chooser id="c-general.check.type.substance"/>
   <conditions>
<!--      <condition features="@type:entity"/>  -->
      <condition features="@type:e-substance  @feat:PRONOMINALIZED:false"/> 	  
   </conditions>
   <actions>
      <action choice="type-substance">
	 <add-feature feature="Delimitation" value="variable"/> 
      </action>      
      <action choice="type-non-substance">
      </action>
    </actions>
</system>


</systems>

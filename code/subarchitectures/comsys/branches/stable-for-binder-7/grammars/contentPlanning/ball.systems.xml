<systems> 


<!-- /**

@system ball.thing

Just sets the proposition of things to be "ball". 

*/ --> 

<system id="ball.thing" region="THING" metafunction="ideational">
   <chooser id="default"/>
   <conditions>
      <condition features="@type:thing"/>
   </conditions>
   <actions>
      <action choice="default">
		<add-proposition propositions="@ball"/>
      </action>
   </actions>
</system>




</systems>


<policy>

	<nodes>
		<node id="startNode" isInitial="true" isFinal="false">
		</node>

		<node id="engagedNode" isFinal="false" isInitial="false" action="greetingAction">
		</node>
        
		<node id="closedNode" isFinal="true" isInitial="false"
			action="closingAction">
		</node>

	</nodes>

	<edges>
		<edge id="greetingEdge" source="startNode" target="engagedNode" observation="greetingObs"/>
		<edge id="closingEdge" observation="closingObs" source="engagedNode" target="closedNode"/>
	</edges>
    
	<conditions>
        <condition type="communicativeintention" content="&lt;state&gt;(engagement-open ^ &lt;agent&gt;human ^ &lt;agent&gt;robot)" lowerProb="0.0" higherProb="1.0" id="greetingObs"/>
        <condition content="&lt;state&gt;(engagement-closed ^ &lt;agent&gt;human ^ &lt;agent&gt;robot)" type="communicativeintention" lowerProb="0.0" higherProb="1.0" id="closingObs"/>
    </conditions>
    
	<actions>
        <action id="greetingAction" content="&lt;state&gt;(engagement-open ^ &lt;agent&gt;robot ^ &lt;agent&gt;human)"/><action
        	id="closingAction" content="&lt;state&gt;(engagement-closed ^ &lt;agent&gt;robot ^ &lt;agent&gt;human)">
</action>
	</actions>

</policy>
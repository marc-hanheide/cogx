    rule { typechange: adv(pre-s)$1           =>   pre-s2($1)         :  EVENT( MODIFIER() ) ; } 
    rule { typechange: adv(pre-vp)$1          =>   pre-vp2($1)        :  EVENT( MODIFIER() ) ; } 
   
    rule { typechange: adv(post-s)$1          =>   post-s2($1)        :  EVENT( MODIFIER() ) ; } 
    rule { typechange: adv(post-vp)$1         =>   post-vp2($1)       :  EVENT( MODIFIER() ) ; } 
  

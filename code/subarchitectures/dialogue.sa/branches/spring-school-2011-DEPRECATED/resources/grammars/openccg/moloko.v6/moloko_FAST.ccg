  def extr-subj(rslt, syn, sem) { 
  
     entry: rslt    / ( s(fin s-minor) \ np[F 3rd s-sg nf-real] ) syn   
		  : F( sem ^ <Scope-in>(E:event <Subject>(F) ) ) ; 
  }


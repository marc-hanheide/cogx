namespace P
{

static const double eps = 1e-12;

template <class Num>
inline Num Sqr(Num x)
{
  return x*x;
}

/**
 * @brief Returns true if the value is near zero (+/- epsilon)
 * Our epsion is 1e-12
 */
inline bool IsZero(double d)
{
  return fabs(d) < eps;
}

}
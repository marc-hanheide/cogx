<scene>
  <model>
    <file>dp-ptu-d46/bottom.pbmf</file>
    <name>ptu_bottom</name>
  </model>

  <joint>
    <name>pan</name>
    <axis>0 0 1</axis>
    <children>
      <model>
	<file>dp-ptu-d46/middle.pbmf</file>
	<name>ptu_middle</name>
      </model>

      <joint>
	<name>tilt</name>
	<axis>0 1 0</axis>

	<transform>
	  <translate>0 0 0.0911</translate>
	</transform>

	<children>
	  <model>
	    <file>dp-ptu-d46/top.pbmf</file>
	    <name>ptu_top</name>
	  </model>
	</children>
      </joint>
    </children>
  </joint>
</scene>

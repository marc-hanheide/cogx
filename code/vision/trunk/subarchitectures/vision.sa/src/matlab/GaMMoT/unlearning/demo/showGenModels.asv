function showGenModels( im, pdf, fignum )

a_hue = get_hue(im) ;
w = cols(im) ; h = rows(im) ;
a_r = reshape(a_hue,1,w*h) ;

bel = getBeliefOfdata( pdf, a_r ) ;
bel = reshape( bel, w, h ) ;

figure(fignum) ; clf ;
subplot(1,3,1) ; imagesc(im) ; title('original image')
subplot(1,3,2) ; showPdfNonNorm( bounds, N,centers, covariances, weights, color ) ;
subplot(1,3,3) ; imagesc(uint8(round(bel*255))) ;



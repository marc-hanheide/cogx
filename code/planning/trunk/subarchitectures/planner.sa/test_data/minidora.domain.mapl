(define (domain cogx)

	(:requirements :mapl :adl :durative-actions :object-fluents)
	
	(:types 
		robot - agent

		node - object
		place_type - object
	)
	
	(:constants
		place placeholder - place_type
        R2D2 - robot
	)

    (:predicates
		(connected ?n1 ?n2 - node)
		;; special
		(has-goal ?a - agent)
		(commited ?a - agent)
    )	

	(:functions
		(place_type ?n - node) - place_type
		(pos ?r -  agent) - node
 	)
	


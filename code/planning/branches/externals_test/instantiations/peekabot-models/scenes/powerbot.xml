<scene>
  <model>
    <file>powerbot/powerbot.pbmf</file>
  </model>

  <!-- Bumpers -->
  <color r="0" g="0" b="0">
    <!-- Front bumpers -->
    <group>
      <name>front_bumpers</name>
      <children>
	<sensor type="bumper">
	  <name>bumper1</name>
	  <children>
	    <model><file>powerbot/bumper_front_1.pbmf</file></model>
	  </children>
	</sensor>

	<sensor type="bumper">
	  <name>bumper2</name>
	  <children>
	    <model><file>powerbot/bumper_front_2.pbmf</file></model>
	  </children>
	</sensor>

	<sensor type="bumper">
	  <name>bumper3</name>
	  <children>
	    <model><file>powerbot/bumper_front_3.pbmf</file></model>
	  </children>
	</sensor>

	<sensor type="bumper">
	  <name>bumper4</name>
	  <children>
	    <model><file>powerbot/bumper_front_4.pbmf</file></model>
	  </children>
	</sensor>

	<sensor type="bumper">
	  <name>bumper5</name>
	  <children>
	    <model><file>powerbot/bumper_front_5.pbmf</file></model>
	  </children>
	</sensor>

	<sensor type="bumper">
	  <name>bumper6</name>
	  <children>
	    <model><file>powerbot/bumper_front_6.pbmf</file></model>
	  </children>
	</sensor>

	<sensor type="bumper">
	  <name>bumper7</name>
	  <children>
	    <model><file>powerbot/bumper_front_7.pbmf</file></model>
	  </children>
	</sensor>
      </children>
    </group>

    <!-- Rear bumpers -->
    <group>
      <name>rear_bumpers</name>
      <children>
	<sensor type="bumper">
	  <name>bumper1</name>
	  <children>
	    <model><file>powerbot/bumper_rear_1.pbmf</file></model>
	  </children>
	</sensor>

	<sensor type="bumper">
	  <name>bumper2</name>
	  <children>
	    <model><file>powerbot/bumper_rear_2.pbmf</file></model>
	  </children>
	</sensor>

	<sensor type="bumper">
	  <name>bumper3</name>
	  <children>
	    <model><file>powerbot/bumper_rear_3.pbmf</file></model>
	  </children>
	</sensor>

	<sensor type="bumper">
	  <name>bumper4</name>
	  <children>
	    <model><file>powerbot/bumper_rear_4.pbmf</file></model>
	  </children>
	</sensor>

	<sensor type="bumper">
	  <name>bumper5</name>
	  <children>
	    <model><file>powerbot/bumper_rear_5.pbmf</file></model>
	  </children>
	</sensor>
      </children>
    </group>
  </color>
</scene>

  <model:physical name="goal_model">
    <static>false</static>
    <xyz>3 0 0.5</xyz>
    <body:box name="goal_body">
      <geom:box name="goal_geom">
        <size>1 1 1</size>
        <mass>1</mass>
        <visual>
          <scale>1 1 1</scale>
          <mesh>unit_box</mesh>
          <uvTile>1 1</uvTile>
          <material>Gazebo/Green</material>
        </visual>
      </geom:box>
    </body:box>
 </model:physical>


IFEQ(%(hardware),real)
    OPTDEFAULT hardware_options=<multiline>
        kinect
        !kinect-video
        !video 
        !stereo
        ptz  cameramount
        robot
        !laser
        katana
    </multiline>
ELSE # simulation
    OPTDEFAULT hardware_options=<multiline>
        !kinect
        !kinect-video
        video 
        stereo
        ptz
        cameramount
        robot
        !laser
        !katana
    </multiline>
ENDIF


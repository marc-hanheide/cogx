understand : is_reference(Nom, Referent, EpSt) <-
%	understand : resolves_to_epobject(Nom, Referent, EpSt) / reference_resolution,
	understand : about(Nom, Referent, EpSt),
	int : pre(i1, belief(Nom, EpSt, fv(mark, 'referring-expression'))) / p(1.0).  % XXX Int
%	int : pre(Int, belief(Nom, EpSt, fv(about, Ref))) / p(1.0).

understand : is_reference(Nom, Referent, _EpSt) <-
	understand : unknown_reference(Nom, Referent) / p(0.55),
	? understand : ungroundable(Nom, Referent).

%-------------------------------------------------------------------------

understand : topic(_S, _H, EpSt, _Int, RefNom, _Nom) <-
	? understand : is_reference(RefNom, _Referent, EpSt).


<systems> 

<!-- /**

@system polarity

Inserts negative polarity iff <AnswerType>negative for full clauses

*/ --> 

<system id="polarity" region="POLARITY" metafunction="ideational">
   <chooser id="c-polarity"/> 
   <conditions>
      <condition features="@feat:Mood"/>   
   </conditions>
   <actions>
      <action choice="polarity-positive">
      </action>     

      <action choice="polarity-negative">
      		<add-feature feature="Polarity" value="neg" />  
      </action>     
   </actions>
</system>

</systems>

<?xml version="1.0" encoding="UTF-8"?>

<!-- For a complete description of what inquiry code is built-in, and
     what formats the definitions of choosers should take, see the file
     "../ucpchoosers.xsd".
--> 

<chooser id="c-pronominalization.pronoun" region="PRONOMINALIZATION" metafunction="ideational">
   <dectree>
       <choicenode answer="*TOP*">
            <inquiry id="q-ex-fv" type="string" answerset="@true @false @unknown"> 
                <q-ex-fv feat="Salient" val="true"/>	                                 
            </inquiry>
            <choicenode answer="true">  <!-- salient -->
                <inquiry id="q-ex-fv" type="string" answerset="@true @false @unknown"> 
                    <q-ex-fv feat="InfoStatus" val="familiar"/>	                                 
                </inquiry>
                <choicenode answer="true">  <!-- familiar -->
                    <result val="pronoun-it"/>
                </choicenode>
                <choicenode answer="false">  <!-- not familiar -->
                <inquiry id="f-featval" type="string" answerset="@proximal @distal @unknown"> 
                    <f-featval feat="Proximity" val="unknown"/>	                                 
                </inquiry>
                    <choicenode answer="unknown">     <!-- the feat proximity is not present, so make a random choice  -->
                        <inquiry id="random" type="string" answerset="@pronoun-this @pronoun-that"> 
                        </inquiry>
                        <choicenode answer="pronoun-that">
                            <result val="pronoun-that"/>
                        </choicenode>
                        <choicenode answer="pronoun-this">
                            <result val="pronoun-this"/>
                        </choicenode>
                    </choicenode>  <!-- end proximity unknown -->
                    <choicenode answer="proximal">     <!-- the feat proximity is present with value proximal-->
                        <result val="pronoun-this"/>
                    </choicenode>
                    <choicenode answer="distal">      <!-- the feat proximity is present with value distal-->
                        <result val="pronoun-that"/>
                    </choicenode>
                </choicenode>  <!-- end not familiar -->
            </choicenode>  <!-- end salient -->
            <choicenode answer="false">  <!-- not salient -->
                <result val="no-pronoun"/>
            </choicenode>  <!-- end not salient -->
        </choicenode>
    </dectree>
</chooser>

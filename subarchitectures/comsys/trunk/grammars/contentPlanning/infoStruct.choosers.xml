<choosers>

<chooser id="c-proofStatus" region="infoStruct" metafunction="textual">
   <dectree>
       <choicenode answer="*TOP*">
         <inquiry id="f-featval" type="string" answerset="@assumed @asserted @unknown"> 
		    <f-featval feat="ProofStatus"  />
		 </inquiry>			
		 <choicenode answer = "assumed">  
			<result val="proof-status-assumed"/>			
		 </choicenode>
		 <choicenode answer = "asserted">
			<result val="proof-status-asserted"/>
		 </choicenode>
		 <choicenode answer = "unknown">
			<result val="proof-status-asserted"/>  <!-- Rheme is the default --> 
            <!-- check if in ascr -->
            
            
         </choicenode>
	   </choicenode>
   </dectree>
</chooser>


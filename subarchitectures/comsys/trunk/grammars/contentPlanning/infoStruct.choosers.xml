<choosers>

<chooser id="c-proofStatus" region="infoStruct" metafunction="textual">
   <dectree>
       <choicenode answer="*TOP*">
         <inquiry id="q-deprel-type" type="string" answerset="@true @false"> 
		    <q-deprel-type mode="Compound" />  <!-- check whether this entity is a compound-modifier -->
		 </inquiry>			
		 <choicenode answer = "true">  <!-- this entity is a compound-modifier-->
            <result val="doNothing"/>
         </choicenode>
       
		 <choicenode answer = "false">  <!-- this entity is not a compound-modifier-->
         <!-- check whether Rheme has already been set to avoid duplication -->
         <inquiry id="q-ex-feat" type="string" answerset="@true @false"> 
		    <q-ex-feat feat="Rheme"/>
		 </inquiry>			
            <choicenode answer = "true">
                <result val="doneRheme"/>
            </choicenode>
		 <choicenode answer = "false">         
           <inquiry id="f-featval" type="string" answerset="@assumed @asserted @unknown"> 
		      <f-featval feat="ProofStatus"  />
		   </inquiry>			
		   <choicenode answer = "assumed">  
			  <result val="proof-status-assumed"/>			
		   </choicenode>
		   <choicenode answer = "asserted">
			  <result val="proof-status-asserted"/>
		   </choicenode>
		   <choicenode answer = "unknown">
			  <result val="proof-status-assumed"/>  <!-- Rheme is the default --> 
              <!-- check if in ascr -->
           </choicenode>            
           </choicenode>  <!-- end Rheme check -->            
         </choicenode>  <!-- end compound check -->
	   </choicenode>  <!-- end TOP -->
   </dectree>
</chooser>


## stable CAST file for COMSYS
## - comsys comprehension side: ASR, parsing, discourse referent resolution, discourse structure interpretation, salience
## - comsys production side: NONE YET
## - motivation.sa: all
## - binding.sa: all


HOST localhost

SUBARCHITECTURE binding.sa localhost
CPP  WM BindingWorkingMemory
CPP  TM AlwaysPositiveTaskManager
CPP  GD binding.scorer BindingScorer -nth 0 -maxN 1
CPP  GD binding.judge BindingJudge 
CPP  GD binding.binder Binder 
CPP  GD binding.groups BindingGroupManager
CPP  GD binding.state BindingStatusMonitor #--log
CPP  GD binding.dot BindingDotViewer -d dotfiles_comsys #--log --proxy short --union short 
CPP  GD binding.garbage GarbageCollector #--log --police-mode strict
CPP  GD binding.ambiguity AmbiguityIdentifier #--log
#CPP  GD binding.comsys_tester ComsysTester --test 0 --comsys comsys.sa --log

SUBARCHITECTURE motiv.sa localhost
CPP  WM BindingWorkingMemory
CPP  TM AlwaysPositiveTaskManager
CPP  GD motiv.binder Binder 
CPP  GD motiv.state BindingStatusMonitor #--log
CPP  GD motiv.dot BindingDotViewer -d dotfiles_motiv #--log --proxy short --union short 
CPP  GD motiv.garbage GarbageCollector #--log --police-mode strict
CPP  GD binding.scorer_dummy BindingScorer -nth 0 -maxN 1 --dummy


## ===========================================
## COMSYS
## ===========================================

SUBARCHITECTURE comsys.sa localhost
## -------------------------------------------
## Working memory and task manager
## -------------------------------------------
JAVA WM             org.cognitivesystems.comsys.workingmemory.ComsysWorkingMemory --log true
JAVA TM             org.cognitivesystems.comsys.general.ComsysTaskManager --file ./subarchitectures/comsys.mk4/config/comsys-stable-TM.sync #--log true
## -------------------------------------------
## Comprehension side
## -------------------------------------------
JAVA GD speech.rec		org.cognitivesystems.comsys.components.asr.ASR --src gui #--log true
JAVA GD parser			org.cognitivesystems.comsys.components.UtteranceInterpretation --grammar ./subarchitectures/comsys.mk4/grammars/openccg/moloko.v5/grammar.xml #--log true
JAVA GD discRefBindings org.cognitivesystems.comsys.components.DiscRefBindingsComponent #--log true
JAVA GD dialMoveInt		org.cognitivesystems.comsys.components.DialogueMoveInterpretation #--log true
JAVA GD dialstructure	org.cognitivesystems.comsys.components.DialogueStructureManager #--log true 
## JAVA GD eventInt		org.cognitivesystems.comsys.components.EventStructureInterpretation --incrementalInterpretation false #--log true
JAVA GD salience		org.cognitivesystems.comsys.processing.saliency.SalienceModelHelper #--log true
## -------------------------------------------
## Production side
## -------------------------------------------
JAVA GD dialPlan		org.cognitivesystems.comsys.components.CommunicativeGoalPlanner --bsa binding.sa # --log true
JAVA GD contentPlanning	org.cognitivesystems.comsys.components.ContentPlanning --contentBody Content --redux ./subarchitectures/comsys.mk4/grammars/contentPlanning/modelredux.rdx --grammar ./subarchitectures/comsys.mk4/grammars/contentPlanning/grammar.xml --log true
## JAVA GD gre				org.cognitivesystems.comsys.processing.ObjectGREProcess --distractorFeature Concept --bsa binding.sa --log
JAVA GD realization		org.cognitivesystems.comsys.components.UtteranceRealization --contentBody Content --ngrams ./subarchitectures/comsys.mk4/grammars/contentPlanning/ngram-corpus.txt --ccg ./subarchitectures/comsys.mk4/grammars/openccg/moloko.v5/grammar.xml --log true
JAVA GD speech.synth 	org.cognitivesystems.comsys.components.tts.TTS --startserver --serverHost localhost --serverPort 59125 --voice hmm-slt --log true
## -------------------------------------------
## Binding/motivation monitor
## -------------------------------------------
JAVA GD comsys.binding.monitor	org.cognitivesystems.comsys.monitors.ComSysBindingMonitor -bsa binding.sa --msa motiv.sa --incrementalBinding false --syncModel sync_one --no-check motiv.sa --log true
## -------------------------------------------
## Visualization
## -------------------------------------------

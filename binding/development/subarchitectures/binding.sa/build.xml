<project name="binding subarch" default="compile" basedir=".">


	<!-- Users should modify the below 2 lines to determine where resulting jar should be installed -->
	<property name="install.prefix" value="/usr/local" />
	<property name="install.dir" value="${install.prefix}/share/java" />


	<!-- Controls where the output goes -->
	<property name="output.dir" value="output/classes" />
	<property name="jar.dir" value="output/jars" />

	<!-- Controls what is compiled -->
	<property name="src.dir" value="./src/java" />
	<property name="slice.dir" value="./src/slice" />


	<!-- Provides access to environment variables -->
	<property environment="env"/>

	<!-- Includes the slice2java task from Ice. Requires ant-ice.jar to be in your classpath -->
	<taskdef name="slice2java" classname="Slice2JavaTask">
	  <classpath>
	    <!-- try to use env classpath -->
	    <pathelement path="${env.CLASSPATH}"/>
	    <!-- if this doesn't work, guess some common locations -->
	    <pathelement location="/opt/local/share/java/ant-ice.jar"/>	
	    <pathelement location="/usr/local/share/java/ant-ice.jar"/>
	    <pathelement location="/usr/share/java/ant-ice.jar"/>
	    <pathelement location="/opt/share/java/ant-ice.jar"/>
	  </classpath>
	</taskdef>


	<!-- =================================================================== -->
	<!-- Prepares the build directories                                      -->
	<!-- =================================================================== -->
	<target name="prepare">
		<!-- create directories -->
		<mkdir dir="${output.dir}" />
		<mkdir dir="${jar.dir}" />
	</target>

	
		
	<target name="slice-BindingFeaturesCommon" depends="prepare" description="generates source from slice">
		<echo message="------ BindingFeaturesCommon.ice ---------" />
		<slice2java tie="true" outputdir="${src.dir}">
		    <fileset dir="${slice.dir}" includes="BindingFeaturesCommon.ice"/>
		    <includepath>
	              <pathelement path="${slice.dir}:../../tools/cast/src/slice"/>
		    </includepath>
		</slice2java>
	</target>
	
	<target name="slice-BindingData" depends="prepare" description="generates source from slice">
		<echo message="------ BindingData.ice ---------" />
		<slice2java tie="true" outputdir="${src.dir}">
		    <fileset dir="${slice.dir}" includes="BindingData.ice"/>
		    <includepath>
	              <pathelement path="${slice.dir}:../../tools/cast/src/slice"/>
		    </includepath>
		</slice2java>
	</target>
	
	<target name="slice-BindingFeatures" depends="prepare" description="generates source from slice">
		<echo message="------ BindingFeatures.ice ---------" />
		<slice2java tie="true" outputdir="${src.dir}">
		    <fileset dir="${slice.dir}" includes="BindingFeatures.ice"/>
		    <includepath>
	              <pathelement path="${slice.dir}:../../tools/cast/src/slice"/>
		    </includepath>
		</slice2java>
	</target>
	
	<target name="slice-BindingQueries" depends="prepare" description="generates source from slice">
		<echo message="------ BindingQueries.ice ---------" />
		<slice2java tie="true" outputdir="${src.dir}">
		    <fileset dir="${slice.dir}" includes="BindingQueries.ice"/>
		    <includepath>
	              <pathelement path="${slice.dir}:../../tools/cast/src/slice"/>
		    </includepath>
		</slice2java>
	</target>
	
	<!-- =================================================================== -->
	<!-- Basic compilation                                                   -->
	<!-- =================================================================== -->
	
	<target name="slice" depends="slice-BindingFeaturesCommon,slice-BindingData,slice-BindingFeatures,slice-BindingQueries" description="generates source from slice">
</target>



	<!-- =================================================================== -->
	<!-- Basic compilation                                                   -->
	<!-- =================================================================== -->
	<target name="compile" depends="prepare, slice" description="compiles the source code">
		<javac srcdir="${src.dir}" destdir="${output.dir}" debug="${debug}" deprecation="${deprecation}" optimize="${optimize}" debuglevel="lines,vars,source" />
	</target>

	
	<!-- =================================================================== -->
	<!-- Jar                                                 -->
	<!-- =================================================================== -->
	<target name="create-jar" depends="compile" description="archives class files in jar">	  
	  <jar destfile="${jar.dir}/cast.jar" basedir="${output.dir}"/>
	</target>


	<!-- =================================================================== -->
	<!-- Install somewhere                                                   -->
	<!-- =================================================================== -->
	<target name="build" depends="create-jar" description="builds cast and creates jar file"/>


	<!-- =================================================================== -->
	<!-- Install somewhere                                                   -->
	<!-- =================================================================== -->
	<target name="install" depends="create-jar" description="installs jar file">	  
	  <mkdir dir="${install.dir}" />
	  <copy file="${jar.dir}/cast.jar" todir="${install.dir}"/>
	</target>




	<!-- =================================================================== -->
	<!-- Cleanup                                                             -->
	<!-- =================================================================== -->
	<target name="clean">
		<echo message="Cleaning autogen files" />
		<delete dir="./src/java/BindingFeaturesCommon" />
		<echo message="Cleaning class files" />
		<delete dir="${output.dir}/binding" />
		<!-- this is needed to trigger regeneration of sources from slice -->
		<delete file="${src.dir}/.depend" />
	</target>



</project>

<project name="CoSy Abstract Architecture Toolkit" default="compile.all">

	<import file="../../common.xml" />

	<target name="compile.all" depends="idl,compile">
	</target>

	<target name="idl">
		<idlgen file="CAST.idl" />
		<idlgen file="guitypes.idl" />
	</target>

	<target name="clean">
	  <echo message="Cleaning autogen files from ${basedir}/tools/cast/src/java/cast/cdl"/>
	  <delete dir="${basedir}/tools/cast/src/java/cast/cdl"/>
	  <echo message="Cleaning class files from ${output.dest}/cast"/>
	  <delete dir="${output.dest}/cast" />
	</target>
	
</project>
